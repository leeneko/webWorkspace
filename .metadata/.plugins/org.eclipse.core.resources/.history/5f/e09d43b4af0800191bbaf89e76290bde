	<script type="text/javascript">
		function team(var s, var color) {
			alert(s + color);
			var team = document.getElementsByClassName("team" + s);
			
			for (var i = 0; i < team.length; i++)
				team[i].style.cssText = "background-color:" + color + ";";
		}
	</script>
